{% extends "TiprApplicationBundle:Base:layout.html.twig" %}

{% set title = 'Overview' %}

{% block pageContent %}
<div role="main" class="ui-content jqm-content jqm-fullwidth">
    <div class="ui-grid-b ui-corner-all">
        <div class="ui-block-a">
            <div class="ui-bar ui-bar-a">Today<br/></div>
            <div class="ui-body ui-body-a">&#8364;3,00</div>
        </div>
        <div class="ui-block-b">
            <div class="ui-bar ui-bar-a">This week<br/></div>
            <div class="ui-body ui-body-a">&#8364;3,00</div>
        </div>
        <div class="ui-block-c">
            <div class="ui-bar ui-bar-a">This month</div>
            <div class="ui-body ui-body-a">&#8364;3,00</div>
        </div>
    </div>

    <div data-theme="a" data-form="ui-body-a" class="ui-body ui-body-a ui-corner-all separate">
        <div id="chart" style="width: 100%; height: 200px;"></div>
    </div>

    <ul data-role="listview" data-count-theme="b" data-inset="true">
        <li>John Doe <span class="ui-li-count">&#8364;1,00</span></li>
        <li>John Doe <span class="ui-li-count">&#8364;1,00</span></li>
        <li>John Doe <span class="ui-li-count">&#8364;1,00</span></li>
    </ul>
</div>


    {{ donator.name }}

    <ul>
        {% for donation in donations %}
            <li>{{ donation.message }}{{ donation.amount }}{{ donation.date|date }}</li>
        {% endfor %}
    </ul>

    {{ totalToday }}
    {{ totalWeek }}
    {{ totalMonth }}

    <ul>
        {% for donation in donationsThisWeek %}
            <li>{{ donation.amount }} {{ donation.date|date }} {{ donation.message }} {{ donation.amount }} {{ donation.date|date }}</li>
        {% endfor %}
    </ul>
{% endblock %}

