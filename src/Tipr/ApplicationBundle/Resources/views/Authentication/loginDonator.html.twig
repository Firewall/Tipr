{% extends "TiprApplicationBundle:Base:authentication.html.twig" %}

{% set title = 'Login' %}

{% block pageContent %}
    <div role="main" class="ui-content jqm-content jqm-fullwidth">
        <div data-theme="a" data-form="ui-body-a"
             class="ui-body ui-body-a ui-corner-all tipr-header tipr-separate tipr-image">
            <div class="overlay">
                <div class="userinfo">
                    <h1>sign in</h1>
                </div>
                <img src="http://lorempixel.com/400/300" alt="profile"/>
            </div>
        </div>
        <div data-theme="a" data-form="ui-body-a" class="ui-body ui-body-a ui-corner-all tipr-separate">
            <form role="form"
                  data-ajax="false"
                  action="{{ path('tipr_application_loginDonatorProcess') }}" {{ form_enctype(form) }} method="post"
                  novalidate="novalidate">
                {{ form_widget(form.username, {'attr': {'placeholder': 'Username' }}) }}
                {{ form_errors(form.username) }}

                {{ form_widget(form.code, {'attr': {'placeholder': 'PIN' }}) }}
                {{ form_errors(form.code) }}

                {{ form_widget(form.send) }}

                {{ form_widget(form._token) }}
            </form>
            <a href="{{ path('tipr_application_registerDonator') }}">No account? Register one now!</a>
        </div>

    </div>
{% endblock %}